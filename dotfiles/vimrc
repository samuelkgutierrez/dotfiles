""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" general
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
set showcmd
" Highlight current line
set cursorline
" set cursorcolumn
syntax on
" fix backspace in insert mode
set backspace=indent,eol,start
"set number
" tab settings
set expandtab
set ruler
set tabstop=4
set softtabstop=4
set shiftwidth=4
" indentation
set autoindent
set smartindent
" search
set incsearch " search as characters are entered
set showmatch " highlight matching
set hlsearch  " highlight matches
set wrapscan  " turn on search wrap
set ls=2
set textwidth=80
" no visual bell
set visualbell
set t_vb=
set tabpagemax=100

